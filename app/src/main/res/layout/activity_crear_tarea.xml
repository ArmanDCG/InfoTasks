<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearEditarModelos.CrearTarea"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="Nueva Tarea"
        android:layout_gravity="top|center_horizontal"
        style="@style/textoIdentificarElemento"
        android:layout_marginBottom="20dp" />

    <TextView
        style="@style/textoIdentificarElemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="DescripciÃ³n:"
        android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/txtCrearDescTarea"
            style="@style/textoInput"
            android:layout_width="338dp"
            android:layout_height="249dp"
            android:layout_gravity="top|center_horizontal"
            android:autoText="true"
            android:background="@drawable/border_input_text"
            android:ems="10"
            android:gravity="start"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/txtErrorDescripcion"
            style="@style/textoError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginRight="5dp">

        <TextView
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/textView3"
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad:"
            android:layout_marginBottom="50dp"/>
        <TextView
            android:id="@+id/textView4"
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente:"
            android:layout_marginBottom="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/spinnerTipo"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_input_text"
            android:dropDownSelector="@color/azulMarino"/>

        <Spinner
            android:id="@+id/spinnerPrioridad"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_input_text"
            android:dropDownSelector="@color/azulMarino"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <ImageButton
                android:id="@+id/btnAddCliNuevo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/add_cliente"
                android:background="@color/azulMarino"
                />

            <ImageButton
                android:id="@+id/btnBuscarCliente"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/azulMarino"
                android:src="@drawable/lupa_cliente"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtCrearNomClienteTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="cliente"
            style="@style/textoInput"
            android:background="@drawable/border_input_text"/>

        <TextView
            android:id="@+id/txtErrorCliente"
            style="@style/textoError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

    </LinearLayout>



    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:gravity="center">
    <Button
        android:id="@+id/btnCrearTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear" />

    <Button
        android:id="@+id/btnCancelarCrearTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar" />
</LinearLayout>


    </LinearLayout>
    </ScrollView>

</LinearLayout>