<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearTarea"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="Nueva Tarea"
        android:layout_gravity="top|center_horizontal"
        style="@style/textoIdentificarElemento"
        android:layout_marginBottom="20dp" />

    <TextView
        style="@style/textoIdentificarElemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="DescripciÃ³n:"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/txtCrearDescTarea"
        android:layout_width="338dp"
        android:layout_height="249dp"
        android:ems="10"
        android:layout_gravity="top|center_horizontal"
        android:inputType="textMultiLine"
        style="@style/textoInput"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/txtErrorDescripcion"
        style="@style/textoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="17dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp">

        <TextView
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:" />

        <Spinner
            android:id="@+id/spinnerTipo"
            android:layout_width="170dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtErrorTipo"
        style="@style/textoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="17dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp">
        <TextView
            android:id="@+id/textView3"
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad:" />
    <Spinner
        android:id="@+id/spinnerPrioridad"
        android:layout_width="170dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtErrorPrioridad"
        style="@style/textoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:gravity="right">
        <ImageButton
            android:id="@+id/btnAddCliNuevo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/add_cliente"
            android:background="@color/azulMarino" />

        <ImageButton
            android:id="@+id/btnBuscarCliente"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/azulMarino"
            android:src="@drawable/lupa_cliente"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp">
    <TextView
        android:id="@+id/textView4"
        style="@style/textoIdentificarElemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente:" />

        <TextView
            android:id="@+id/txtCrearNomClienteTarea"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="cliente"
            style="@style/textoInput"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtErrorCliente"
        style="@style/textoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="10dp"/>





    <Button
        android:id="@+id/btnCrearTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear" />

    <Button
        android:id="@+id/btnCancelarCrearTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar" />



</LinearLayout>