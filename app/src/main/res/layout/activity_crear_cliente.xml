<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearCliente"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="Nuevo Cliente"
        android:layout_gravity="top|center_horizontal"
        style="@style/textoIdentificarElemento"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI:"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/txtCrearDniCliente"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            style="@style/textoInput"
            android:background="@android:color/transparent" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtErrorDni"
        style="@style/textoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/txtCrearNombreCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/textoInput"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtErrorNombre"
        style="@style/textoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellidos:"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/txtCrearApellidosCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/textoInput"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtErrorApellidos"
        style="@style/textoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono:"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/txtCrearTlfCliente"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:inputType="number"
            style="@style/textoInput"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtErrorTelefono"
        style="@style/textoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localidad:"
            android:layout_marginRight="5dp"/>

        <EditText
            android:id="@+id/txtCrearLocalidadCliente"
            style="@style/textoInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtErrorLocalidad"
        style="@style/textoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            style="@style/textoIdentificarElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domicilio:"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/txtCrearDomicilioCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/textoInput"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtErrorDomicilio"
        style="@style/textoError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnCancelarCrearCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="100dp"/>
        <Button
            android:id="@+id/btnCrearCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear" />
    </LinearLayout>

</LinearLayout>