<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Administrador">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/contenedor_fragment"
        android:name="com.example.infotasks.ListasModelos.ListaTareas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/azulMarino"
        app:itemIconTint="@color/color_item_nav"
        app:itemTextColor="@color/color_item_nav"
        app:menu="@menu/bottom_navigation_menu"/>

</RelativeLayout>